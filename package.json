{
  "name": "raw-ui",
  "version": "0.0.1",
  "description": "Minimalist and customizable React UI library for Web Applications.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build:clear": "rm -rf ./dist",
    "build": "pnpm build:clear && rollup --config rollup.build.config.js --environment NODE_ENV:production",
    "dev": "rollup --config ./rollup.config.js --watch --environment NODE_ENV:development",
    "docs:dev": "next dev --port 8000",
    "docs:build": "next build",
    "lint": "pnpm lint:eslint && pnpm lint:tsc",
    "lint:eslint": "eslint --cache --ext .ts,.tsx .",
    "lint:tsc": "tsc --noEmit",
    "prettier": "prettier --write .",
    "test": "jest",
    "test:update": "jest --updateSnapshot",
    "test:coverage": "jest --coverage",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shervinchen/raw-ui.git"
  },
  "keywords": [
    "react",
    "design-systems",
    "typescript",
    "react-components",
    "ui-components",
    "ui-library",
    "ui-kit",
    "vercel",
    "raw-ui"
  ],
  "author": "shervinchen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shervinchen/raw-ui/issues"
  },
  "homepage": "https://github.com/shervinchen/raw-ui#readme",
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-react": "^7.18.6",
